{
  "compilerOptions": {
    "outDir": "es",
    "target": "es2018",
    "module": "esnext",
    "baseUrl": ".",
    "sourceMap": false,
    "moduleResolution": "node",
    "allowJs": false,
    "strict": true,
    "noUnusedLocals": true,
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "removeComments": false,
    "rootDir": ".",
    "declaration": true,
    "paths": {
      "@/*": [
        "lib/*"
      ]
    }  
  },
  "include": [
    "lib"
  ],
  "exclude": [
    "node_modules"
  ]
}